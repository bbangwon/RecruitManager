@model RecruitSetting

<h2>모집 상세 보기 - @ViewData["Id"]</h2>

<a href="/RecruitManager/RecruitSettingList" class="btn btn-primary">모집 설정 리스트</a>

<form asp-controller="RecruitManager"
      asp-action="RecruitSettingEdit"
      method="post"
      class="form-horizontal"
      role="form">

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="BoardName"></label>
        <div class="col-sm-10">
            <input asp-for="BoardName" class="form-control" />
            <span asp-validation-for="BoardName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="BoardNum"></label>
        <div class="col-sm-10">
            <input asp-for="BoardNum" class="form-control" />
            <span asp-validation-for="BoardNum" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="BoardTitle"></label>
        <div class="col-sm-10">
            <input asp-for="BoardTitle" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="BoardContent"></label>
        <div class="col-sm-10">
            <textarea asp-for="BoardContent" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="StartDate"></label>
        <div class="col-sm-10">
            <input asp-for="StartDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="EventDate"></label>
        <div class="col-sm-10">
            <input asp-for="EventDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="EndDate"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="MaxCount"></label>
        <div class="col-sm-10">
            <input asp-for="MaxCount" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Remarks"></label>
        <div class="col-sm-10">
            <input asp-for="Remarks" class="form-control" />
        </div>
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreationDate" />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">수정</button>
        </div>
    </div>
</form>