@model RecruitSetting

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<h1>모집 추가</h1>

<a href="/RecruitManager/RecruitSettingList">모집 설정 리스트</a>

<form 
    asp-controller="RecruitManager"
    asp-action="RecruitSettingCreate"
    method="post"
    class="form-horizontal" 
    role="form">

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="BoardName"></label>
        <div class="col-sm-10">
            <input asp-for="BoardName" class="form-control" />
            <span asp-validation-for="BoardName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="BoardNum"></label>
        <div class="col-sm-10">
            <input asp-for="BoardNum" class="form-control" />
            <span asp-validation-for="BoardNum" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="BoardTitle"></label>
        <div class="col-sm-10">
            <input asp-for="BoardTitle" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="BoardContent"></label>
        <div class="col-sm-10">
            <input asp-for="BoardContent" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

